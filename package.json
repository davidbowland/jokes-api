{
  "name": "dbowland-jokes-lambdas",
  "version": "1.0.0",
  "private": true,
  "description": "Lambdas for dbowland.com jokes",
  "author": "David Bowland",
  "engines": {
    "node": "^14.0.0"
  },
  "license": "ISC",
  "scripts": {
    "clean": "rm -rf build coverage && npm ci",
    "build": "npm run clean && tsc",
    "deploy": "npm run build && ./scripts/deploy.sh",
    "lint": "prettier --write . && eslint --fix .",
    "test": "jest --colors"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "eslint --fix . && jest --colors"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-unknown",
      "eslint --fix",
      "jest --colors --findRelatedTests --coverageThreshold '{}'"
    ],
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidbowland/dbowland-jokes-lambdas.git"
  },
  "bugs": {
    "url": "https://github.com/davidbowland/dbowland-jokes-lambdas/issues"
  },
  "homepage": "https://github.com/davidbowland/dbowland-jokes-lambdas#readme",
  "dependencies": {
    "@types/aws-lambda": "^8.10.77",
    "@types/node": "^15.12.2",
    "aws-sdk": "^2.923.0",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "babel-jest": "^27.0.2",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^4.3.8",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1"
  }
}
