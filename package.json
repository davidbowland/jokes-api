{
  "name": "jokes-api",
  "version": "1.49.0",
  "description": "Lambda jokes API",
  "author": "David Bowland",
  "engines": {
    "node": "^18.0.0"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidbowland/jokes-api.git"
  },
  "bugs": {
    "url": "https://github.com/davidbowland/jokes-api/issues"
  },
  "homepage": "https://github.com/davidbowland/jokes-api#readme",
  "scripts": {
    "build": "npm run clean && tsc && cp package*.json dist/ && cd dist/ && HUSKY=0 NODE_ENV=production npm ci",
    "clean": "rm -rf dist coverage && NODE_ENV=test npm ci",
    "deploy": "npm run build && ./scripts/deploy.sh",
    "lint": "prettier --write . && eslint --fix . --resolve-plugins-relative-to .",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install ; fi",
    "start": "npm run build && npm run quick-start",
    "quick-start": "tsc && ./scripts/runLocal.sh",
    "test": "jest --colors",
    "typecheck": "tsc --noEmit",
    "update": "ncu --doctor --target minor --upgrade && npm audit fix --audit-level=none && npm run test && npm dedupe"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.484.0",
    "@aws-sdk/client-polly": "^3.484.0",
    "ajv": "^8.12.0",
    "aws-xray-sdk-core": "^3.5.3",
    "fast-json-patch": "^3.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/preset-typescript": "^7.23.3",
    "@types/aws-lambda": "^8.10.130",
    "@types/jest": "^29.5.11",
    "@types/node": "^18.19.4",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-unknown",
      "eslint --resolve-plugins-relative-to . --fix",
      "jest --colors --findRelatedTests --coverageThreshold '{}'"
    ],
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  }
}
